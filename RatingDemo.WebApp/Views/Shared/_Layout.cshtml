<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link href="~/bootstrap/4.4.1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/font-awesome/5.13.0/css/all.min.css" rel="stylesheet" />
    <link href="~/css/Style.css" rel="stylesheet" />
</head>
<body>
    <header role="banner">
        <div class="container-fluid">
            <div class="row  py-5">
                <div class="col-4 offset-4 col-sm-8 offset-sm-2 col-md-8 offset-md-2 col-lg-4 offset-lg-4 col-xl-6 offset-xl-3">
                    <img src="~/images/logo.png" alt="Logo" class="mx-auto d-block w-25 img-fluid img-logo" />
                </div>

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="col-4 col-sm-2 col-md-2 col-lg-2 offset-lg-2 col-xl-2 offset-xl-1">
                        <div class="dropdown">
                            <a class="dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <b>Tùy chọn</b>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a href="#"
                                   role="button"
                                   class="dropdown-item btn-danger" data-toggle="modal" data-target="#exampleModalCenter">
                                    Đổi dịch vụ
                                </a>
                                <a href="#"
                                   role="button"
                                   class="dropdown-item btn-danger" data-toggle="modal" data-target="#modalExit">
                                    Thoát
                                </a>
                            </div>

                            <partial name="_ChangeServiceModal" />
                            <partial name="_ExitModal" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <div class="d-none">
        @*<script src="~/js/popper.min.js"></script>*@
        <script src="~/jquery/3.5.0/jquery.min.js"></script>
        @*<script src="~/bootstrap/4.4.1/dist/js/bootstrap.min.js"></script>*@
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>