@using RatingDemo.WebApp.Models
@model LoginRequest

<div class="container-fluid">
    <div class="row">
        <div class="col-10 offset-1 col-xl-6 offset-xl-3 col-sm-8 offset-sm-2 col-md-8 offset-md-2 col-lg-6 offset-lg-3 border pl-5 pr-5 pt-5 pb-5 mb-5 bg-danger text-white">
            <form asp-controller="User" asp-action="Login" method="post" autocomplete="off">
                <div class="text-center">
                    <img src="~/images/login/arrow-button.png" class="img-fluid logo-login" />
                    <h3>Đăng Nhập</h3>
                </div>

                <div class="form-group mt-4 md-form">
                    <input type="password"
                           class="form-control"
                           asp-for="Passcode"
                           autocomplete="off" placeholder="Passcode" />
                    <span asp-validation-for="Passcode"></span>
                </div>
                <div>
                    <h4>Chọn loại dịch vụ</h4>
                    <input type="hidden" asp-for="Service" value="1" />

                    <div class="row m-0 pt-3 text-center text-white">
                        <div class="col-4 rounded-lg border border-white bg-white text-danger services" data-selector="1">
                            <img src="~/images/login/bucket.png"
                                 alt="Logo"
                                 class="mt-4 mb-3 img-fluid mx-auto d-block" />
                            <h6>Vệ sinh</h6>
                        </div>
                        <div class="col-4 rounded-lg border border-white services" data-selector="2">
                            <img src="~/images/login/policeman.png"
                                 alt="Logo"
                                 class="mt-4 mb-3 img-fluid mx-auto d-block" />
                            <h6>Bảo vệ</h6>
                        </div>
                        <div class="col-4 rounded-lg border border-white services" data-selector="3">
                            <img src="~/images/login/social-care.png"
                                 alt="Logo"
                                 class="mt-4 mb-3 img-fluid mx-auto d-block" />
                            <h6>Chăm sóc học viên</h6>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-danger btn-lg border-radius w-100 mt-4 shadow-lg bg-danger">
                    Bắt đầu đánh giá
                </button>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/services.js"></script>
}